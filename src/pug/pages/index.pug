
mixin project(time, url, label, tech)
    tr
        td.tab-width-3=time
        td.tab-width-4
            a(href=url title=label)=label
        td= tech

mixin experience(time, url, label, role)
    tr
        td.tab-width-3= time
        td.tab-width-4
            a(href=url title=label)= label
        td= role
        
mixin experienceLong(time, url, label, url2, label2, role)
    tr
        td.tab-width-3= time
        td.tab-width-4
            a(href=url title=label)= label
            | , 
            a(href=url2 title=label2)= label2
        td= role
    
mixin skill(one, two)
    tr
        td.tab-width-6= one
        td.tab-width-6= two

mixin technology(area, list)
    tr
        td.tab-width-3= area
        td.tab-width-6= list

mixin misc(one, two)
    tr
        td.tab-width-6= one
        td.tab-width-6= two

